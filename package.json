{
  "name": "browser-git",
  "version": "0.1.0",
  "description": "A full-featured Git implementation for browsers using Go + WebAssembly and TypeScript",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:packages",
    "build:wasm": "cd packages/git-core && make build",
    "build:packages": "npm run build -ws --if-present",
    "dev": "npm run dev -ws --if-present",
    "dev:wasm": "cd packages/git-core && make watch",
    "clean": "npm run clean -ws --if-present && rm -rf dist coverage playwright-report test-results",
    "test": "npm run test:unit",
    "test:all": "npm run test:unit && npm run test:browser",
    "test:unit": "npm run test -ws --if-present",
    "test:integration": "vitest run tests/integration",
    "test:browser": "playwright test",
    "test:browser:headed": "playwright test --headed",
    "test:browser:debug": "playwright test --debug",
    "test:browser:chromium": "playwright test --project=chromium",
    "test:browser:firefox": "playwright test --project=firefox",
    "test:browser:webkit": "playwright test --project=webkit",
    "test:browser:ui": "playwright test --ui",
    "test:watch": "vitest watch",
    "test:coverage": "npm run test:coverage -ws --if-present",
    "test:coverage:ui": "vitest --coverage --ui",
    "bench": "vitest bench --config vitest.bench.config.ts",
    "bench:run": "vitest bench --run --config vitest.bench.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "npm run type-check -ws --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "analyze": "node scripts/analyze-bundle.js",
    "ci": "npm run lint && npm run type-check && npm run test:unit && npm run build",
    "ci:full": "npm run lint && npm run type-check && npm run test:all && npm run bench:run && npm run build && npm run analyze",
    "version:patch": "npm version patch --workspaces --no-git-tag-version",
    "version:minor": "npm version minor --workspaces --no-git-tag-version",
    "version:major": "npm version major --workspaces --no-git-tag-version",
    "version:sync": "node scripts/sync-versions.js",
    "prerelease": "npm run ci:full",
    "release:prepare": "npm run version:sync && npm run build",
    "release:publish": "npm publish --workspaces --access public",
    "release:dry-run": "npm publish --workspaces --access public --dry-run"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "serve": "^14.2.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nseba/browser-git.git"
  },
  "keywords": [
    "git",
    "browser",
    "wasm",
    "webassembly",
    "version-control",
    "offline",
    "indexeddb",
    "opfs",
    "typescript",
    "go"
  ],
  "author": "Sebastian Negomireanu",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/nseba/browser-git/issues"
  },
  "homepage": "https://github.com/nseba/browser-git#readme"
}
